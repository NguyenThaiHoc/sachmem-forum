<%= form_for @comment do |f| %>
  <div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name, class: "form-control" %><br>
  </div> 

  <div class="form-group">
  <%= f.label :text %><br>
  <%= f.text_field :text, class: "form-control"  %><br>
  </div>

  <div class="form-group">
  <%= f.label :link %><br>
  <%= f.text_field :link, class: "form-control"  %><br>
  </div>

  <%= f.label :image %> <br>
  <%= f.file_field :image %> <br>

  <%= f.submit %>
<% end %>

