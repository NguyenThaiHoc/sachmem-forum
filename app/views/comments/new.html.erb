<%= form_for @comment do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :text %><br>
  <%= f.text_field :text %><br>

  <%= f.label :link_image %><br>
  <%= f.text_field :link_image %><br>

  <%= f.label :link_video %><br>
  <%= f.text_field :link_video %><br>

  <%= f.label :image %> <br>
  <%= f.file_field :image %> <br>

  <%= f.label :video %> <br>
  <%= f.file_field :video %> <br>

  <%= f.submit %>
<% end %>
