<div id="alert-message">
  <% flash.each do |message_type, message| %>
    <div class="alert <%= bootstrap_alert(message_type) %>">
      <%= message %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(window).load(function() {
    $("#alert-message").fadeOut(9000);
  });
</script>
