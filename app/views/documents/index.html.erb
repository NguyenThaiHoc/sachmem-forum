<h1 class="text-center"> Documents </h1>

<div class="flex-container">
  <div class="width-md-60">
    <% @documents.each do |document| %>
      <div class=" ui segment documents">
        <div class="document">
          <a class="avatar">
            <%= image_tag "elliot.jpg" %>
          </a>

          <div class="content">
            <%= link_to document.name, document, class: "author" %>
            <div class="metadata"><%= document.created_at %></div>
            <div class="text"><%= document.text %></div>
            <div class="image"><%= image_tag document.image.small.url %></div>

            <% if document.link_text.present? %>
              <div class="text">  
                Link : <a href="<%= document.link_text %>" target="_blank"> Here  </a>
              </div>
            <% end %>

            
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <div class="width-md-40">
    <div class="ui segment">
      <%= render "documents/new" %>
    </div>
  </div>
</div>
